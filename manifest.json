{
  "manifest_version": 2,
  "name": "Cypherpunk Privacy Suite",
  "short_name": "Cypherpunk",
  "description": "Cypherpunk Privacy Suite",
  "version": "1.0.0",
  "author": "Cypherpunk",
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "128": "assets/icon_128.png",
    "16": "assets/icon_16.png"
   },

  "permissions": ["privacy"]
}

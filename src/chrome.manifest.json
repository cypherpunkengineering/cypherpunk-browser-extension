{
  "manifest_version": 2,
  "name": "Cypherpunk Privacy",
  "short_name": "Cypherpunk",
  "version": "0.4.0",

  "description": "Cypherpunk Privacy",

  "author": "Cypherpunk Partners",
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "128": "assets/cypherpunk_grey_128.png",
    "96": "assets/cypherpunk_grey_96.png",
    "64": "assets/cypherpunk_grey_64.png",
    "48": "assets/cypherpunk_grey_48.png",
    "32": "assets/cypherpunk_grey_32.png",
    "24": "assets/cypherpunk_grey_24.png",
    "16": "assets/cypherpunk_grey_16.png"
   },

  "permissions": [
    "*://*/*",
    "privacy",
    "proxy",
    "cookies",
    "management",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "background",
    "storage",
    "<all_urls>"
  ],

  "background": {
    "scripts": [
      "ad-list.js",
      "malware-list.js",
      "background.js"
    ]
  }
}
